<header style="font-weight: bold;">
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup" >
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      
      <% if(username){ %>
        <form class="form-inline" action="/logout" method="POST"  style="margin-left: auto; margin-right: 0;">
          <span style="margin-left: 1rem; margin-top: 0; margin-bottom: 0;">Logged In As: <%= username %></span>
          <button style="margin-left: 1rem" type="submit" class="btn btn-dark">Logout</button>
        </form>
       <% } else{ %>  
        <form class="form-inline" action="/login" method="POST"  style="margin-left: auto; margin-right: 0;">
          <input class="form-control" type="text" name="username"  style="width: 200px;">
          <button style="margin-left: 1rem" type="submit" class="btn btn-outline-dark">Submit</button>
        </form>
     <% } %>


    </div>
  </nav>
</header>